<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>{% block title %}Foodie{% endblock %}</title>

    <!-- CSS Files -->
    <link href="{{ asset('js/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('js/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet" />


    <!-- Template Main CSS File -->
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="{{ asset('css/general.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/styleAcceuil.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/ProduitCart.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/panier.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/queries.css') }}" />
    <!-- Boxicons CSS -->

    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    <link rel="icon" href="{{ asset('img/favicon.png') }}" />
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon.png') }}" />
    <link rel="manifest" href="{{ asset('manifest.webmanifest') }}" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
            href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap"
            rel="stylesheet"
    />
    {% block stylesheets %}{% endblock %}

    <style>
        .nav-item {
            position: relative;
            display: inline-block;
        }
        .round-image {
            border-radius: 50%;
            border: 2px solid white;
            cursor: pointer;
        }
        .submenu {
            display: none;
            position: absolute;
            top: 4.9rem;
            left: 1rem;
            font-size:1.2rem;
            background-color: white;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            padding: 10px 14px;
            z-index: 1;
        }
        .nav-item:hover .submenu {
            display: block;
        }
        .submenu a {
            color: #e67e22;
            text-decoration: none;
            display: block;
            padding: 8px 0;
        }

        .submenu a > i {
            font-size: 2rem;
        }
        .submenu a:hover {
            background-color: #ddd;
        }

        .map-container {
            width: 100%;
            height: 200px;
            margin-top: 20px;
            position: relative;
            overflow: hidden;
        }

    </style>
</head>

<body>
{% block header %}
    <header class="header">
        <a href="#">
            <img class="" alt="Foodie logo" style="width: 20rem; margin-top: 4rem;" src="{{ asset('/img/logoo.png') }}" />
        </a>

        <nav class="main-nav">
            <ul class="main-nav-list">
                <li><a class="main-nav-link" href="{{ path('app_about')}}">Guide</a></li>
                <li><a class="main-nav-link" href="#Menu">Menu</a></li>
                <li><a class="main-nav-link" href="#chefs">Nos chef</a></li>
                {% if app.user %}
                    <ul>
                        <li class="nav-item">
                            <a class="main-nav-link" href="{{ path('app_profile') }}">
                                {% if app.user.getPhotoProfil() %}
                                    <img  class="round-image"  style="width:5rem;" src="{{ asset('uploads/' ~ app.user.getPhotoProfil()) }}" alt="Photo de profil">
                                {% else %}
                                    <img class="round-image" alt="profile"  style="width:6rem;" src="{{ asset('/img/avatar.webp') }}" />
                                {% endif %}
                            </a>
                            <div class="submenu">
                                <a href="{{ path('app_logout') }}"><i class='bx bx-log-out'></i> logout</a>
                            </div>

                        </li>
                    </ul>
                {% else %}
                    <li><a class="main-nav-link nav-cta" href="{{path('app_login')  }}">Connexion</a></li>
                    <li><a class="main-nav-link1 nav-cta1" href="{{ path('app_register') }}">S'inscrire</a></li>
                {% endif %}

            </ul>
        </nav>

        <button class="btn-mobile-nav">
            <ion-icon class="icon-mobile-nav" name="menu-outline"></ion-icon>
            <ion-icon class="icon-mobile-nav" name="close-outline"></ion-icon>
        </button>
    </header>
{% endblock %}

